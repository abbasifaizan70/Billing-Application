<%= form_with(model: @user, local: true) do |form| %>
  <%= render 'layouts/errors', object: @user %>
  <div class='form-group'>
    <%= form.label :Name %>
    <%= form.text_field :name , class: 'form-control mb-3' %>
  </div>
  <div class=”field”> (Upload your new profile picture below!)
    <%= form.file_field :avatar, class: 'form-control', direct_upload: true %>  
  </div>
  <div class='actions'>
    <%= form.submit class:'btn btn-info' %>
    <%= link_to 'Cancel', users_path, class: 'btn btn-info' %>
  </div>
<% end %>
